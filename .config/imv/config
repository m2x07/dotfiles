[options]
background = 383838
overlay_font = Maple Mono NF CN:10
overlay_background_alpha = bb
overlay_text = [$imv_current_index\/$imv_file_count] $imv_current_file [$imv_width\x$imv_height]
overlay_position_bottom = true
scaling_mode = shrink

[aliases]
delete = exec rm "$imv_current_file"
wallp = exec hyprctl hyprpaper reload eDP-1,"$imv_current_file"

[binds]
<Ctrl+d> = exec rm "$imv_current_file"; next
